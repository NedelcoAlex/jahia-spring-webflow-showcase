<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0">
    <modules jcr:primaryType="jnt:modules">
        <spring-webflow-showcase j:dependencies="default job"
                               j:moduleType="module"
                               j:title="Jahia Spring WebFlow Showcase"
                               jcr:primaryType="jnt:module">
                
                <templates j:rootTemplatePath="/base" jcr:primaryType="jnt:templatesFolder">
                    <job-apply j:applyOn="jnt:job"
                          j:defaultTemplate="false"
                          j:hiddenTemplate="false"
                          jcr:primaryType="jnt:contentTemplate">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="job-apply"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <main-resource-display j:mainResourceView="showcase-short"
                                         jcr:primaryType="jnt:mainResourceDisplay"/>
                            <rich-text jcr:primaryType="jnt:bigText">
                                <j:translation_en jcr:language="en"
                                       jcr:primaryType="jnt:translation"
                                       text="&lt;h2&gt;Take the challenge! Apply for this job!&lt;/h2&gt;&#xA;"/>
                            </rich-text>
                            <main-resource-display-apply j:mainResourceView="showcase-apply"
                                               jcr:primaryType="jnt:mainResourceDisplay"/>
                        </pagecontent>
                    </job-apply>
                    <job-review j:applyOn="jnt:job"
                         j:defaultTemplate="false"
                         j:hiddenTemplate="false"
                         jcr:primaryType="jnt:contentTemplate">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="job-review"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <main-resource-display j:mainResourceView="showcase-short"
                                         jcr:primaryType="jnt:mainResourceDisplay"/>
                            <rich-text jcr:primaryType="jnt:bigText">
                                <j:translation_en jcr:language="en"
                                       jcr:primaryType="jnt:translation"
                                       text="&lt;h2&gt;Please, review the submitted job applications!&lt;/h2&gt;&#xA;"/>
                            </rich-text>
                            <main-resource-display-apply j:mainResourceView="showcase-review"
                                               jcr:primaryType="jnt:mainResourceDisplay"/>
                        </pagecontent>
                    </job-review>
                </templates>
                
            </spring-webflow-showcase>
    </modules>
</content>
